html(class="no-js" lang="en" ng-app="app")
    head
        link(rel="stylesheet" href="css/vendor.css")
        link(rel="stylesheet" href="css/main.min.css")
        base(href="/")

        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        meta(name="author" content="Nimish Mehta")
        meta(name="viewport" content="width=device-width,initial-scale=1")

        title(ng-bind="meta.title")
            | Nimish Mehta

    body
        #layout.pure-g
            .sidebar.pure-u-1.pure-u-md-1-4
                .header
                    h1.brand-title A Sample Blog
                    h2.brand-tagline Creating a blog layout using Pure
                    nav.nav
                        ul.nav-list
                            li.nav-item
                                a.pure-button(ui-sref="home")
                                    | Home
                            li.nav-item
                                a.pure-button(ui-sref="blog")
                                    | Blog
                            li.nav-item
                                a.pure-button(ui-sref="about")
                                    | About
            .content.pure-u-1.pure-u-md-3-4
                div(ui-view="main")

            script(src="js/vendor.min.js")
            script(src="js/main.min.js")
            script(src="js/templates.min.js")
